<h1>Event <%= @event.artist %></h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Artist:</strong>
  <%= @event.artist %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Price low:</strong>
  <%= @event.price_low %>
</p>

<p>
  <strong>Price high:</strong>
  <%= @event.price_high %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.event_date %>
</p>
<%= link_to 'All events', events_path, class: 'btn btn-primary text-light' %>
<%= render "tickets_list", tickets: @event.tickets %>

<% if current_user != nil%>
<%= render "new_ticket", ticket: Ticket.new( :event_id=>@event.id) %>
<% end %>