<h1>Ticket</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @ticket.name %>
</p>

<p>
  <strong>Seat id seq:</strong>
  <%= @ticket.seat_id_seq %>
</p>

<p>
  <strong>Address:</strong>
  <%= @ticket.address %>
</p>

<p>
  <strong>Price:</strong>
  <%= @ticket.price %>
</p>

<p>
  <strong>Email address:</strong>
  <%= @ticket.email_address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @ticket.phone %>
</p>

<p>
  <strong>Event:</strong>
  <%= @ticket.event_id %>
</p>

<h1>Event</h1>
<table>
<%= render 'event', event: @ticket.event %>
</table>

<div class="btn-group" role="group" aria-label="Basic example">
<%= link_to 'Edit', edit_ticket_path(@ticket), class: 'btn btn-primary text-light' %>
<%= link_to 'All tickets', tickets_path, class: 'btn btn-primary text-light' %>
<%= link_to 'Event', @ticket.event, class: 'btn btn-primary text-light' %>
</div>